{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
   <style>
         .poster {
         max-height:400px;
      }
   </style>
    <div class="media">
        <img class="poster align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>Saisons :
                {% for season in program.seasons %}
                    <a href="/program/{{program.id}}/seasons/{{season.id}}">{{season.number}}</a> / 
                {% endfor %}
            </p>
            <strong>Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path('actor_show', { 'id': actor.id } ) }}" > {{ actor.name }} </a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}